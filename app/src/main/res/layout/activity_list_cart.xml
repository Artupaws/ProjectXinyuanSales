<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.cart.ListCartActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_list_cart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/orange" />

    <LinearLayout
        android:id="@+id/linear_data_invoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_list_cart">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_gravity="end"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_margin="0.8dp"
                    android:gravity="center_horizontal"
                    android:background="@color/white"
                    android:text="TGL"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginTop="0.8dp"
                    android:layout_marginEnd="0.8dp"
                    android:layout_marginBottom="0.8dp"
                    android:gravity="center_horizontal"
                    android:background="@color/white"
                    android:text="19-1-2021"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginTop="0.3dp"
                    android:layout_marginStart="0.6dp"
                    android:layout_marginEnd="0.6dp"
                    android:gravity="center_horizontal"
                    android:background="@color/white"
                    android:text="KEPADA YTH"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_margin="0.8dp"
                    android:gravity="center_horizontal"
                    android:background="@color/white"
                    android:text="BPK. HANDAN"
                    android:textSize="12sp"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="4"
            android:background="@color/black"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0.8dp"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="FAKTUR No."/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0.8dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:background="@color/white"
                android:text="142/1/2021"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0.8dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:background="@color/white"
                android:text="SALES"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0.8dp"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="ANGEL"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            android:weightSum="4"
            android:background="@color/black"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0.8dp"
                android:layout_marginEnd="0.8dp"
                android:layout_marginBottom="0.8dp"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="D/O. No."/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0.8dp"
                android:layout_marginEnd="0.8dp"
                android:layout_marginBottom="0.8dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:background="@color/white"
                android:text="142"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0.8dp"
                android:layout_marginEnd="0.8dp"
                android:layout_marginBottom="0.8dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:background="@color/white"
                android:text="TEMPO"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0.8dp"
                android:layout_marginEnd="0.8dp"
                android:layout_marginBottom="0.8dp"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="CASH"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="4"
            android:background="@color/black"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0.8dp"
                android:gravity="center_horizontal"
                android:layout_weight="0.7"
                android:background="@color/white"
                android:text="Total"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0.8dp"
                android:layout_weight="1.5"
                android:gravity="center_horizontal"
                android:background="@color/white"
                android:text="Nama"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0.8dp"
                android:layout_weight="0.8"
                android:gravity="center_horizontal"
                android:background="@color/white"
                android:text="Harga"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0.8dp"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="Jumlah"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_list_order"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_data_invoice"
        app:layout_constraintVertical_bias="0.0">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_cart_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame_list_order"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="0.8dp"
            android:layout_weight="0.7"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="0.8dp"
            android:layout_weight="1.5"
            android:background="@color/white"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="0.8dp"
            android:layout_weight="0.8"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:text="Total Rp." />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="0.8dp"
            android:layout_weight="1"
            android:background="@drawable/background_stroke_square"
            android:gravity="end"
            android:padding="3dp"
            android:text="Rp.140.000.000"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>