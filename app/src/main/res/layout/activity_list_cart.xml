<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.cart.ListCartActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_list_cart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/orange" />

    <LinearLayout
        android:id="@+id/linear_data_invoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_list_cart">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:gravity="center_vertical"
            android:weightSum="2">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:layout_weight="1.2"
                android:src="@drawable/ic_diamonds_icon"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="0.8dp"
                        android:textAlignment="center"
                        android:background="@color/white"
                        android:padding="5dp"
                        android:text="@string/tgl" />

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0.8dp"
                        android:layout_marginEnd="0.8dp"
                        android:layout_marginBottom="0.8dp"
                        android:background="@color/white"
                        android:gravity="center_horizontal"
                        android:padding="5dp"
                        tools:text="19-1-2021" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0.6dp"
                        android:layout_marginTop="0.1dp"
                        android:layout_marginEnd="0.6dp"
                        android:background="@color/white"
                        android:gravity="center_horizontal"
                        android:padding="5dp"
                        android:text="@string/kepada_yth"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_admin_customer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="0.8dp"
                        android:background="@color/white"
                        android:gravity="center_horizontal"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        tools:text="BPK. HANDAN" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:background="@color/black"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="0.8dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/factur_title" />

            <EditText
                android:id="@+id/et_number_invoice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="0.8dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center_horizontal|center_vertical"
                android:hint="@string/invoice_number"
                android:inputType="text"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="0.8dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/sales_title" />

            <EditText
                android:id="@+id/et_sales_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="0.8dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:focusable="false"
                android:gravity="center_horizontal|center_vertical"
                android:hint="@string/input_sales_name_here"
                android:inputType="textPersonName"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/black"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0.8dp"
                android:layout_marginEnd="0.8dp"
                android:layout_marginBottom="0.8dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:text="@string/do_title" />

            <EditText
                android:id="@+id/et_number_do"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="0.8dp"
                android:layout_marginEnd="0.8dp"
                android:layout_marginBottom="0.8dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center_horizontal|center_vertical"
                android:hint="@string/hint_no_d_o"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0.8dp"
                android:layout_marginEnd="0.8dp"
                android:layout_marginBottom="0.8dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:text="@string/tempo_title" />

            <Spinner
                android:id="@+id/spn_tempo"
                style="@style/spinnerTextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="0.8dp"
                android:layout_marginEnd="0.8dp"
                android:layout_marginBottom="0.8dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center_horizontal|center_vertical"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_payment_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/payment_account"
                android:textColor="@color/black"
                android:textSize="12sp"/>
            <Spinner
                android:id="@+id/spn_payment_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_tenor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tenor"
                android:textColor="@color/black"
                android:textSize="12sp"/>
            <Spinner
                android:id="@+id/spn_postpaid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:background="@color/black"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0.8dp"
                android:layout_weight="0.7"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:text="@string/total_title" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0.8dp"
                android:layout_weight="1.5"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:text="@string/name_title" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0.8dp"
                android:layout_weight="0.8"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:text="@string/price_title" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0.8dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:text="@string/amount_title" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/frame_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_data_invoice">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_cart_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0.8dp"
                android:layout_weight="0.7"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0.8dp"
                android:layout_weight="1.5"
                android:background="@color/white"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0.8dp"
                android:layout_weight="0.8"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:text="@string/total_price" />

            <TextView
                android:id="@+id/tv_total_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0.8dp"
                android:layout_weight="1"
                android:background="@drawable/background_stroke_square"
                android:gravity="end"
                android:padding="3dp"
                android:textColor="@color/black"
                android:textSize="12sp"
                tools:text="Rp.140.000.000" />
        </LinearLayout>
    </LinearLayout>


    <FrameLayout
        android:id="@+id/frame_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingBottom="5dp">

        <Button
            android:id="@+id/btn_approve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/state_button_add_order"
            android:enabled="true"
            android:text="@string/appove_order" />

        <ProgressBar
            android:id="@+id/progress_circular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>