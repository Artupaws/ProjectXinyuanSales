<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/white"
        android:elevation="5sp">

        <LinearLayout
            android:id="@+id/linear_add_stock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/state_list_product"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_product"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="15dp"
                    android:src="@color/orange"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="5dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:ellipsize="end"
                        tools:text="Tarpaulin"/>
                    <TextView
                        android:id="@+id/tv_product_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        tools:text="Tarpaulin"/>
                    <EditText
                        android:id="@+id/et_input_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/state_background_input_optional"
                        android:textSize="12sp"
                        android:inputType="numberDecimal"
                        android:focusableInTouchMode="true"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:digits="0123456789"
                        android:hint="@string/input_price"
                        android:padding="5dp"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_title_choose"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|end"
                        android:visibility="gone"
                        android:layout_margin="5dp"
                        android:text="@string/choose"
                        android:textSize="10sp"
                        tools:ignore="SmallSp"
                        app:drawableEndCompat="@drawable/ic_checklist_green" />
                    <TextView
                        android:id="@+id/tv_remove"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|end"
                        android:visibility="gone"
                        android:layout_margin="5dp"
                        android:text="@string/remove"
                        android:textSize="10sp"
                        tools:ignore="SmallSp"
                        app:drawableEndCompat="@drawable/ic_remove" />

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/iv_action_add"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:backgroundTint="@android:color/holo_green_dark"
                        android:text="@string/add"
                        android:enabled="false"
                        android:textSize="10sp"
                        android:src="@drawable/ic_add_order"
                        tools:ignore="SmallSp" />
                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>