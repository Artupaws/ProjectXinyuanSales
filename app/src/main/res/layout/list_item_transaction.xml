<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tgl"
                    android:textColor="@color/black"
                    style="@style/TextAppearance.Typography.Body2"
                    android:layout_weight="0.5"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/colon"
                    style="@style/TextAppearance.Typography.Body2"
                    android:layout_weight="0.1"/>
                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="21-2-2021"
                    style="@style/TextAppearance.Typography.Body2"
                    android:layout_weight="1.4"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/factur_title"
                    style="@style/TextAppearance.Typography.Body2"
                    android:textColor="@color/black"
                    android:layout_weight="0.5"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/colon"
                    style="@style/TextAppearance.Typography.Body2"
                    android:layout_weight="0.1"/>
                <TextView
                    android:id="@+id/tv_invoice_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="ABC123JKL45-1"
                    style="@style/TextAppearance.Typography.Body2"
                    android:layout_weight="1.4"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/customer_name"
                    style="@style/TextAppearance.Typography.Body2"
                    android:textColor="@color/black"
                    android:layout_weight="0.5"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/colon"
                    style="@style/TextAppearance.Typography.Body2"
                    android:layout_weight="0.1"/>
                <TextView
                    android:id="@+id/tv_name_customer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="Gunawan"
                    style="@style/TextAppearance.Typography.Body2"
                    android:layout_weight="1.4"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tempo_title"
                    style="@style/TextAppearance.Typography.Body2"
                    android:textColor="@color/black"
                    android:layout_weight="0.5"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/colon"
                    style="@style/TextAppearance.Typography.Body2"
                    android:layout_weight="0.1"/>

                <TextView
                    android:id="@+id/tv_type_payment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    tools:text="On Time"
                    style="@style/TextAppearance.Typography.Body2"
                    android:textStyle="bold"
                    android:layout_weight="1.4"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Company"
                    style="@style/TextAppearance.Typography.Body2"
                    android:textColor="@color/black"
                    android:layout_weight="0.5"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/colon"
                    style="@style/TextAppearance.Typography.Body2"
                    android:layout_weight="0.1"/>

                <TextView
                    android:id="@+id/tv_company"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    tools:text="Xin Yuan"
                    style="@style/TextAppearance.Typography.Body2"
                    android:layout_weight="1.4"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_status_payment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:layout_marginEnd="5dp"
                    android:enabled="true"
                    tools:text="@string/paid_off"
                    android:textColor="@color/white"
                    style="@style/TextAppearance.Typography.Button"
                    android:background="@drawable/state_background_todo"/>
                <Button
                    android:id="@+id/btn_detail"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:layout_gravity="end"
                    android:drawableEnd="@drawable/ic_next"
                    android:text="@string/detail_order"
                    style="@style/TextAppearance.Typography.Button"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linear_history_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/payment_history"
                    style="@style/TextAppearance.Typography.Body2"
                    android:textColor="@color/black"/>

                <ImageView
                    android:id="@+id/iv_expand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_expand"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_title_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_black"
                android:weightSum="3"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:gravity="center"
                    android:text="@string/date"
                    style="@style/TextAppearance.Typography.Body2"
                    android:textSize="12sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/payment"
                    style="@style/TextAppearance.Typography.Body2"
                    android:textSize="12sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:gravity="center"
                    android:text="@string/payment_account"
                    style="@style/TextAppearance.Typography.Body2"
                    android:textSize="12sp"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_history_payment"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/linear_history_payment_giro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/payment_with_giro"
                    style="@style/TextAppearance.Typography.Body2"
                    android:textColor="@color/black"/>

                <ImageView
                    android:id="@+id/iv_expand_giro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_expand"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_payment_giro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_black"
                android:orientation="horizontal"
                android:weightSum="4"
                android:visibility="gone"
                android:gravity="center"
                android:padding="1dp">
                <TextView
                    android:id="@+id/tv_date_received"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_weight="0.6"
                    android:textSize="10sp"
                    style="@style/TextAppearance.Typography.Body2"
                    android:text="@string/receive_on"
                    android:textColor="@color/black"
                    tools:ignore="SmallSp" />
                <TextView
                    android:id="@+id/tv_bank_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    style="@style/TextAppearance.Typography.Body2"
                    android:textSize="10sp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:text="@string/bank"
                    tools:ignore="SmallSp" />
                <TextView
                    android:id="@+id/tv_giro_number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    style="@style/TextAppearance.Typography.Body2"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:text="@string/giro_number"
                    tools:ignore="SmallSp" />
                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    style="@style/TextAppearance.Typography.Body2"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal"
                    android:text="@string/status_giro"
                    tools:ignore="SmallSp" />
                <TextView
                    android:id="@+id/tv_balance"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/TextAppearance.Typography.Body2"
                    android:textSize="10sp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:gravity="center_horizontal"
                    android:text="@string/balance"
                    android:textColor="@color/black"
                    tools:ignore="SmallSp" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_history_payment_giro"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>