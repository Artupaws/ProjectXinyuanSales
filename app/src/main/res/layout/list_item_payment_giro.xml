<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/linear_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_date_received"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="0.6"
            android:textSize="10sp"
            tools:text="21-02-2021"
            style="@style/TextAppearance.Typography.Body2"
            tools:ignore="SmallSp" />
        <TextView
            android:id="@+id/tv_bank_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:textSize="10sp"
            android:gravity="center_horizontal"
            style="@style/TextAppearance.Typography.Body2"
            android:background="@color/white"
            tools:text="BCA"
            tools:ignore="SmallSp" />
        <TextView
            android:id="@+id/tv_giro_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="10sp"
            style="@style/TextAppearance.Typography.Body2"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="center_horizontal"
            android:background="@color/white"
            tools:text="12345667788"
            tools:ignore="SmallSp" />
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            style="@style/TextAppearance.Typography.Body2"
            android:background="@drawable/state_background_todo"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            tools:text="Done"
            tools:ignore="SmallSp" />
        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="10sp"
            android:ellipsize="end"
            style="@style/TextAppearance.Typography.Body2"
            android:maxLines="1"
            android:gravity="center_horizontal"
            android:background="@color/white"
            tools:text="IDR20.000"
            tools:ignore="SmallSp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"
        android:layout_below="@+id/linear_item"/>

</RelativeLayout>