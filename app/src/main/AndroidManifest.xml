<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="project.xinyuan.sales">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sales"
        android:usesCleartextTraffic="true">
        <activity android:name=".view.history.detailtransaction.DetailTransactionActivity"
            android:screenOrientation="nosensor"/>
        <activity android:name=".view.cart.ListCartActivity"
            android:screenOrientation="nosensor"/>
        <activity android:name=".view.addfragment.choosecustomer.ChooseCustomerActivity"
            android:screenOrientation="nosensor"/>
        <activity android:name=".view.addfragment.addordercustomer.AddOrderCustomerActivity"
            android:screenOrientation="nosensor"/>
        <activity android:name=".view.addfragment.addcustomerphoto.AddPhotoCustomerActivity"
            android:screenOrientation="nosensor"/>
        <activity android:name=".view.addfragment.addcustomerdata.DataCustomerActivty"
            android:screenOrientation="nosensor"/>
        <activity android:name=".view.account.AccountActivity"
            android:screenOrientation="nosensor"/>
        <activity android:name=".view.dashboard.DashboardActivity"
            android:screenOrientation="nosensor"/>
        <activity android:name=".view.login.LoginActivity"
            android:screenOrientation="nosensor"/>
        <activity android:name=".view.slider.SliderActivity"
            android:screenOrientation="nosensor"/>
        <activity android:name=".view.splashscreen.SplashscreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>